{
    "name": "Crypto Browser, view crypto domains",
    "short_name": "Crypto Browser",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Resolves Crypto Domains",
    "icons": {
        "16": "icons/icon-16.png",
        "128": "icons/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/livereload.js",
            "scripts/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*",
        "webRequest",
        "webRequestBlocking",
        "idle",
        "proxy",
        "sockets"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_title": "Crypto Browser"
    },
    "sockets": {
        "udp": {
            "send": [
                ""
            ],
            "bind": [
                ""
            ],
            "multicastMembership": ""
        },
        "tcp": {
            "connect": [
                ""
            ]
        },
        "tcpServer": {
            "listen": [
                "*:*"
            ]
        }
    }
}